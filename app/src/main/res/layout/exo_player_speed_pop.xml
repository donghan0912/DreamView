<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">

    <ImageView
        android:background="@drawable/ic_video_speed_bg"
        android:id="@+id/speed_less"
        android:layout_width="60dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_video_speed_less" />

    <View
        android:id="@+id/line_less"
        android:layout_width="60dp"
        android:layout_height="1px"
        android:background="#9f9f9f"
        app:layout_constraintTop_toBottomOf="@id/speed_less" />

    <TextView
        android:textColor="@color/gray_900"
        android:id="@+id/speed_value"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/line_less" />

    <View
        android:id="@+id/line_add"
        android:layout_width="60dp"
        android:layout_height="1px"
        android:background="#9f9f9f"
        app:layout_constraintTop_toBottomOf="@id/speed_value" />

    <ImageView
        android:background="@drawable/ic_video_speed_bg"
        android:id="@+id/speed_add"
        android:layout_width="60dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_video_speed_add"
        app:layout_constraintTop_toBottomOf="@id/line_add" />

    <View
        android:id="@+id/line_ok"
        android:layout_width="60dp"
        android:layout_height="1px"
        android:background="#9f9f9f"
        app:layout_constraintTop_toBottomOf="@id/speed_add" />

    <TextView
        android:textColor="@color/gray_900"
        android:background="@drawable/ic_video_speed_bg"
        android:id="@+id/ok"
        android:layout_width="60dp"
        android:layout_height="28dp"
        android:gravity="center"
        android:paddingBottom="4dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="4dp"
        android:text="确定"
        app:layout_constraintTop_toBottomOf="@id/line_ok" />

</android.support.constraint.ConstraintLayout>