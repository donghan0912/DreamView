<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CustomView">
        <attr name="textSize" format="dimension"/>
        <attr name="textColor" format="color"/>
    </declare-styleable>

    <!--multi status layout-->
    <declare-styleable name="MultiStatusLayout">
        <attr name="loadingLayout" format="reference"/>
        <attr name="emptyLayout" format="reference"/>
        <attr name="errorLayout" format="reference"/>
        <attr name="loginLayout" format="reference"/>
        <attr name="noNetworkLayout" format="reference"/>
        <attr name="timeOutLayout" format="reference"/>
    </declare-styleable>

    <declare-styleable name="ExoPlayerView">
        <attr name="use_artwork" format="boolean"/>
        <attr name="default_artwork" format="reference"/>
        <attr name="use_controller" format="boolean"/>
        <attr name="hide_on_touch" format="boolean"/>
        <attr name="resize_mode"/>
        <attr name="surface_type"/>
        <attr name="show_timeout"/>
        <attr name="rewind_increment"/>
        <attr name="fastforward_increment"/>
        <attr name="player_layout_id"/>
        <attr name="controller_layout_id"/>
    </declare-styleable>
</resources>