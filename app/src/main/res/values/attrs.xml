<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CustomView">
        <attr name="textSize" format="dimension"/>
        <attr name="textColor" format="color"/>
    </declare-styleable>

    <!--multi status layout-->
    <declare-styleable name="MultiStatusLayout">
        <attr name="loadingLayout" format="reference"/>
        <attr name="emptyLayout" format="reference"/>
        <attr name="errorLayout" format="reference"/>
        <attr name="loginLayout" format="reference"/>
        <attr name="noNetworkLayout" format="reference"/>
        <attr name="timeOutLayout" format="reference"/>
    </declare-styleable>

    <declare-styleable name="ExoPlayerView">
        <attr name="use_artwork" format="boolean"/>
        <attr name="default_artwork" format="reference"/>
        <attr name="use_controller" format="boolean"/>
        <attr name="hide_on_touch" format="boolean"/>
        <attr name="resize_mode"/>
        <attr name="surface_type"/>
        <attr name="show_timeout"/>
        <attr name="rewind_increment"/>
        <attr name="fastforward_increment"/>
        <attr name="player_layout_id"/>
        <attr name="controller_layout_id"/>
    </declare-styleable>

    <declare-styleable name="CircleProgress">
        <attr name="content_style" format="enum">
            <enum name="style_first" value="1"/>
            <enum name="style_second" value="2"/>
            <enum name="style_third" value="3"/>
        </attr>
        <attr name="progress" format="float"/>
        <attr name="angle" format="float"/>
        <attr name="stroke_width" format="dimension"/>
        <attr name="max" format="float"/>

        <attr name="text_size" format="dimension"/>
        <attr name="text_color" format="color"/>

        <attr name="suffix_text" format="string"/>
        <attr name="suffix_text_color" format="color"/>
        <attr name="suffix_text_size" format="dimension"/>
        <attr name="suffix_text_padding" format="dimension"/>

        <attr name="bottom_text" format="string"/>
        <attr name="bottom_text_size" format="dimension"/>

        <attr name="arc_colors" format="reference"/>
    </declare-styleable>


</resources>