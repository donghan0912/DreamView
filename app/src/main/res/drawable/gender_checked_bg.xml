<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="10dp"
        android:left="10dp"
        android:right="10dp"
        android:top="10dp">
        <shape android:shape="oval"
            android:useLevel="false">
            <solid android:color="@color/gray_50"/>
            <stroke
                android:width="4dp"
                android:color="@color/gray_500" />
            <size
                android:width="16dp"
                android:height="16dp" />
        </shape>
    </item>
</layer-list>

